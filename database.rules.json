{
    "rules": {
        "deputies": {
            ".read": "true",
            ".write": "(auth != null) && root.child('users/' + auth.uid + '/role').val() === 'admin'"
        },
        "users": {
            "$uid": {
                ".read": "auth != null && auth.uid === $uid",
                ".write": "false"
            }
        }
    }
}